#!/bin/bash
# Comstock - stock your command to the cloud
# comstock shell scripts
# shinpei(c)2014

set -e 
saveBashHistory() {
    fc -l -n | tail -n 2 | head -n 1 | sed -e 's/^[[:space:]]*//'  | comstock-cli --shell bash save
}

saveZshHistory() {
    comstock-cli --shell zsh  save
}

# entry point
if [ -z "$BASH_VERSION" ] || [ "${BASH##*/}" != "bash" ]; then
    saveZshHistory
else
    saveBashHistory
fi

